<p id="notice"><%= notice %></p>

<h1>Listing Sub Categories</h1>

<table class='table table-condensed table-hover'>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Smart Form (/:slug_categoria/:slug_subcategoria/)</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td>
          <%=link_to sub_category.category.name, sub_category.category %>
        </td>
        <td><%= sub_category.name %></td>
        <td><%= link_to "#{sub_category.category.slug}/#{sub_category.slug}", smart_form_path(sub_category.category.slug,sub_category.slug) %></td>
        <td><%= link_to 'Edit', edit_sub_category_path(sub_category) %></td>
        <td><%= link_to 'Destroy', sub_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

